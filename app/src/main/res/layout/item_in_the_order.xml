<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/Image_In_order_item"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/count_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Count"
            android:padding="2dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/price_in_order_item"
            app:layout_constraintBottom_toBottomOf="@+id/Image_In_order_item"
            app:layout_constraintEnd_toEndOf="@+id/price_in_order_item"
            app:layout_constraintStart_toStartOf="@+id/price_in_order_item" />

        <TextView
            android:id="@+id/price_in_order_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/price"
            android:padding="2dp"
            app:layout_constraintEnd_toEndOf="@+id/name_item_in_the_order"
            app:layout_constraintStart_toStartOf="@+id/name_item_in_the_order"
            app:layout_constraintTop_toBottomOf="@+id/name_item_in_the_order"
            app:layout_goneMarginTop="8dp" />

        <TextView
            android:id="@+id/name_item_in_the_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:padding="2dp"
            android:hint="@string/name"
            app:layout_constraintStart_toEndOf="@+id/Image_In_order_item"
            app:layout_constraintTop_toTopOf="@+id/Image_In_order_item" />

    </android.support.constraint.ConstraintLayout>



</android.support.v7.widget.CardView>